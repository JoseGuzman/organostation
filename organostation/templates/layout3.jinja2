{% extends "bootstrap/base.html" %}

<!doctype html>
<html>

<head>
    <title>{{ page_title }}</title>
    {% block styles %}
    <link rel="shortcut icon" type="image/x-icon" href="{{ url_for('static', filename='img/favicon.ico') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Nunito&family=Montserrat" />
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='/dist/css/style.min.css') }}" />
    {% endblock %}
</head>

<body>
    <nav>
        {% include "navigation.jinja2" %}
    </nav>
    <main>
        </div class="container" role="main">
        {% block content %}{% endblock %}
        </div>
    </main>
    <footer>
        Copyright {{ current_year }}
    </footer>
</body>

</html>