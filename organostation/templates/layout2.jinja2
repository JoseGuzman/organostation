{#
This is the application layout for the main environment. It includes
the navigation bar and a footer. Because this layout inherits from
bootstrap/base.html, we need to use super() when defining
html and head blocks, to allow Flask to override.
When routing with Flask, include title and description.
#}
{% extends "bootstrap/base.html" %}


<head>
    <title>{{ title }}</title>
    <link rel="shortcut icon" href="{{ url_for('static', filename='img/favicon.ico') }}">

    {# Nunito and Montserrat Google fonts #}
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Nunito&family=Montserrat" />

    {#-- Define css style for organostation #}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='/dist/css/style.min.css') }}" />

    {#
    fontawesome 5 for icons #}
    {#
    <script src="https://kit.fontawesome.com/6364eb9ae2.js" crossorigin="anonymous"></script>
    {# Define css style for font-awesome
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    #}
</head>

{% block navbar %}
<div class="navbar navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Navbar</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">MyFlask</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="/bootstrap"></a></li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="container">
    {% block page_content %}{% endblock %}
</div>
{% endblock %}

