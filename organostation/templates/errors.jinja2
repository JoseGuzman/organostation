{% extends "layout.jinja2" %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
<div class="container h-100 py-5"> {# height 100% and extra-large left/right padding#}
    <div class="row d-flex justify-content-center"> {# row element d-flex to align
        horizontaly children #}
        <div class="col-md-11"> {# grid column that takes 10 out of 12 available extra large columns #}
            <div class="card rounded-3 text-black">
                <div class="row g-0"> {# all the gutters (spacing between columns) removed #}
                    {# first column START #}
                    <div class="col-lg-3">
                        <div class="card-body p-md-6 mx-md-4">
                            <div class="text-center">
                                <img src="{{url_for('static', filename='img/brain1.jpg')}}" alt="logo"
                                    style="height: 150px;">
                            </div>
                        </div>
                    </div>
                    {# first column END #}

                    {# second column START #}
                    <div class="col-lg-9 d-flex align-items-center">
                        <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                            <h4 class="mt-1 mb-5 pb-1"> {{ title }}</h4>
                            <p class="small mb-5">
                                {{ message }}
                            </p>
                        </div>
                    </div>
                </div>
                {# second column END #}
            </div>
            {# first column END #}

            {# second column START #}
        </div>
    </div>
</div>
</div>
{% endblock %}